<aura:component controller="DataTableAuraServices" implements="Flexipage:availableForAllPageTypes" >
    <aura:attribute name="data" type="object"/>
    <aura:attribute name="columns" type="object"/>
    <aura:handler name="init" value="{!this}" action = "{!c.doInit}"/>
    
    <div>
        
        <div class="slds-scrollable_x" style="height:100%;width:100%">
        <lightning:datatable aura:id="customerTable"
                             keyField="id"
                             data="{!v.data}"
                             columns="{!v.columns}"
                             
                             />
            
        </div>
    </div>
   
                                                                  
</aura:component>